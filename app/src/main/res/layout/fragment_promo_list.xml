<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ChimpChip="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.chimpcode.discount.fragments.PromoListFragment"
    android:background="@color/semi_white">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:id="@+id/pinsContainer"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.chimpcode.discount.ui.views.ChimpChip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    ChimpChip:chip_text="Servicios"
                    ChimpChip:chip_type="selected"/>
                <com.chimpcode.discount.ui.views.ChimpChip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    ChimpChip:chip_text="Productos"
                    ChimpChip:chip_type="available"/>
                <com.chimpcode.discount.ui.views.ChimpChip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    ChimpChip:chip_text="Otros"
                    ChimpChip:chip_type="available"/>
                <com.chimpcode.discount.ui.views.ChimpChip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    ChimpChip:chip_text="Otros"
                    ChimpChip:chip_type="selected"/>
                <com.chimpcode.discount.ui.views.ChimpChip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    ChimpChip:chip_text="Otros"
                    ChimpChip:chip_type="selected"/>
                <com.chimpcode.discount.ui.views.ChimpChip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    ChimpChip:chip_text="Otros"
                    ChimpChip:chip_type="available"/>
            </LinearLayout>

        </HorizontalScrollView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
